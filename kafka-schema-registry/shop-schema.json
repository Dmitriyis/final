{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ShopDto",
  "type": "object",
  "properties": {
    "shop_id": {
      "type": "string",
      "description": "Unique product identifier"
    },
    "name": {
      "type": "string",
      "description": "Shop name"
    },
    "description": {
      "type": "string",
      "description": "Detailed shop description"
    },
    "price": {
      "type": "object",
      "properties": {
        "amount": {
          "type": "number",
          "description": "Shop price amount"
        },
        "currency": {
          "type": "string",
          "description": "Currency code (e.g. RUB, USD)"
        }
      },
      "required": ["amount", "currency"]
    },
    "category": {
      "type": "string",
      "description": "Shop category"
    },
    "brand": {
      "type": "string",
      "description": "Shop brand"
    },
    "stock": {
      "type": "object",
      "properties": {
        "available": {
          "type": "integer",
          "description": "Available quantity in stock"
        },
        "reserved": {
          "type": "integer",
          "description": "Reserved quantity in stock"
        }
      },
      "required": ["available", "reserved"]
    },
    "sku": {
      "type": "string",
      "description": "Stock keeping unit"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Shop tags"
    },
    "images": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "description": "Image URL"
          },
          "alt": {
            "type": "string",
            "description": "Image alternative text"
          }
        },
        "required": ["url"]
      }
    },
    "specifications": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      },
      "description": "Shop technical specifications"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Shop creation timestamp"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Shop last update timestamp"
    },
    "index": {
      "type": "string",
      "description": "Search index name"
    },
    "store_id": {
      "type": "string",
      "description": "Store identifier"
    }
  },
  "required": [
    "product_id",
    "name",
    "price",
    "category",
    "stock",
    "created_at",
    "store_id"
  ]
}